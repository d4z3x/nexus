# Nexus Configuration

# === Timezone ===
# Log timestamps use this timezone (e.g. America/New_York, Asia/Taipei)
# TZ=America/New_York

# === Listener Addresses ===
HTTP_ADDR=:80
HTTPS_ADDR=:443
API_ADDR=:8080

# === Database ===
DB_PATH=nexus.db

# === Cloudflare DNS ===
CF_DNS_API_TOKEN=
CLOUDFLARE_EMAIL=

# === ACME / Let's Encrypt ===
ACME_EMAIL=admin@example.com
# LE_STAGING is controlled via the UI toggle (stored in database)

# Wildcard certs - automatically provisions *.basedomain for each route's domain
WILDCARD_DOMAIN_CERT=true

# === Proxy ===
# IP address of this proxy server (used for auto DNS rewrite creation)
PROXY_IP=192.168.50.155

# OAuth session encryption key (32-byte hex string)
# Generate with: openssl rand -hex 32
OAUTH_ENCRYPTION_KEY=

# === AdGuard Home (Primary) ===
# URL of the primary AdGuard Home instance for DNS rewrite management
ADGUARD_URL=http://192.168.50.1:3000
ADGUARD_USER=admin
ADGUARD_PASS=

# === DNS Sync ===
# Sync interval in seconds (how often to sync rewrites to replicas)
SYNC_INTERVAL=300
# Flatten CNAME records to A records during sync
FLATTEN_CNAMES=false
